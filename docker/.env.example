# Docker Environment Configuration
# Copy this file to .env in the docker directory

# Database Configuration
POSTGRES_DB=db_crm
POSTGRES_USER=user_crm
POSTGRES_PASSWORD=password_crm

# Service Ports
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
USERS_SERVICE_PORT=8082
SERVICE_REGISTRY_PORT=8761

# Database Connection for Services
DATABASE_URL=jdbc:postgresql://postgres:5432/db_crm
DATABASE_USERNAME=user_crm
DATABASE_PASSWORD=password_crm

# Application Environment
APP_ENVIRONMENT=docker

# Eureka Configuration
EUREKA_URL=http://service-registry:8761/eureka/

# Logging Configuration
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# Management Configuration
MANAGEMENT_ENDPOINTS=health,info,metrics,prometheus
MANAGEMENT_HEALTH_DETAILS=when-authorized

# JPA Configuration
JPA_DDL_AUTO=validate