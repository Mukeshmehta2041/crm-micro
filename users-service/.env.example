# Users Service Environment Configuration Example
# Copy this file to .env and modify values as needed

# Server Configuration
SERVER_PORT=8082

# Database Configuration
DATABASE_URL=jdbc:postgresql://postgres:5432/db_crm
DATABASE_USERNAME=user_crm
DATABASE_PASSWORD=password_crm
DATABASE_DRIVER=org.postgresql.Driver

# Database Connection Pool
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000
DB_LEAK_DETECTION=60000

# JPA Configuration
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
JPA_SQL_COMMENTS=false
JPA_BATCH_SIZE=20

# Management Configuration
MANAGEMENT_ENDPOINTS=health,info,metrics,prometheus
MANAGEMENT_HEALTH_DETAILS=always

# Logging Configuration
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN
LOG_LEVEL_SQL_BINDER=WARN
LOG_LEVEL_HIKARI=INFO
LOG_LEVEL_WEB=INFO
LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
LOG_PATTERN_FILE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_PATH=/var/log/users-service/application.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30

# Swagger/OpenAPI Configuration
SWAGGER_ENABLED=true

# Application Configuration
APP_ENVIRONMENT=development

# Service Discovery
EUREKA_URL=http://localhost:8761/eureka/

